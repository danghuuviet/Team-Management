@page
@model LoginModel
@{
    <div class="h-100">
        <div class="mask d-flex align-items-center h-100 bg-light">
            <div class="container">
                <div class="row justify-content-center p-5">
                    <div class="col-4">
                        <div class="card shadow-2-strong bg-white rounded">
                            <div class="card-body p-4">
                                <h3 class="text-center mb-4">Login</h3>
                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="E-mail">
                                        <label asp-for="Input.Email" class="form-label">Email</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="Password">
                                        <label asp-for="Input.Password" class="form-label">Password</label>
                                    </div>
                                    <div class="mb-3">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-success">Log in</button>
                                    </div>
                                    <div class="text-center">
                                        Don't have an account? <a href="/Identity/Account/Register" class="text-primary">Sign Up</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
